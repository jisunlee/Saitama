<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <tr>
    <td>
      <b>Name:</b>
    </td>
    <td>
      <%= @customer.name %>
    </td>
  </tr>

  <tr>
    <td>
      <b>Postalcode:</b>
    </td>
    <td>
      <%= @customer.postalcode %>
    </td>
  </tr>

  <tr>
    <td>
      <b>Address:</b>
    </td>
    <td>
      <%= @customer.address %>
    </td>
  </tr>

  <tr>
    <td>
      <b>Website:</b>
    </td>
    <td>
      <%= @customer.website %>
    </td>
  </tr>

  <tr>
    <td>
      <b>Phone num:</b>
    </td>
    <td>
      <%= @customer.phone_num %>
    </td>
